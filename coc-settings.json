{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [
        "--format-style",
        "goimports",
        "--cache-style",
        "on-demand",
        "-mode",
        "stdio",
        "--diagnostics-style=instant"
      ],
      "filetypes": [
        "go"
      ]
    },
    "clojure": {
      "command": "java",
      "args": [
        "-Xmx1G",
        "-server",
        "-jar",
        "~/.config/vim/clojure-lsp/clojure-lsp"
      ],
      "filetypes": ["clj", "cljs", "edn"],
      "rootPatterns": ["project.clj", "deps.edn"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    }
  }
}
