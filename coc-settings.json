{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [
        "--format-style",
        "goimports",
        "--cache-style",
        "on-demand",
        "-mode",
        "stdio",
        "--diagnostics-style=instant"
      ],
      "filetypes": [
        "go"
      ]
    },
    "languageserver": {
      "bash": {
        "command": "bash-language-server",
        "args": ["start"],
        "filetypes": ["sh"],
        "ignoredRootPaths": ["~"]
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    }
  }
}
