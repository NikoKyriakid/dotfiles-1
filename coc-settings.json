{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [
        "--format-style",
        "goimports",
        "--cache-style",
        "on-demand",
        "-mode",
        "stdio",
        "--diagnostics-style=instant"
      ],
      "filetypes": [
        "go"
      ]
    },
    "clojure": {
      "command": "java",
      "args": [
        "-Xmx1G",
        "-server",
        "-jar",
        "~/.config/vim/clojure-lsp/clojure-lsp"
      ],
      "filetypes": ["clj", "cljs", "edn"],
      "rootPatterns": ["project.clj", "deps.edn"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    }
  },
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "pairs.enableBackspace": true,
  "pairs.enableCharacters": ["(", "[", "{", "<", "'", "\"", "`"],
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "git.branchCharacter": "",
  "git.addedSign.text": "+",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.text": "~",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.text": "_",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.text": "‾",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.text": "≃",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete"
}
