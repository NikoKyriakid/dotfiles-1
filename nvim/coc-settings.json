{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "fortran": {
      "command": "fortls",
      "filetypes": ["fortran"],
      "rootPatterns": [".fortls", ".git/"]
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  },
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "pairs.enableBackspace": true,
  "pairs.enableCharacters": ["(", "[", "{", "<", "'", "\"", "`"],
  "coc.source.ultisnips.enable": true,
  "snippets.ultisnips.directories": [
    "UltiSnips"
  ],
  "git.branchCharacter": "",
  "git.addedSign.text": "+",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.text": "~",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.text": "_",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.text": "‾",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.text": "≃",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql"],
  "go.enable": true,
  "go.goplsPath": "/usr/local/go/bin/gopls",
  "go.goplsOptions": {
    "completeUnimported": true,
    "completionDocumentation": false,
    "deepCompletion": false,
    "hoverKind": "FullDocumentation",
    "matcher": "Fuzzy",
    "staticcheck": false,
    "usePlaceholders": true
  },
  "go.tags": {
    "option": "",
    "tags": "json,yaml",
    "transform": "snakecase"
  },
  "go.tests": {
    "generateFlags": []
  },
  "rust-client.updateOnStartup": true,
  "rust.unstable_features": true,
  "coc.source.iced.enable": true
}
