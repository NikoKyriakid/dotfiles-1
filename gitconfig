[include]
    path = ~/.gitconfig.local

[push]
    default = simple

[color]
    ui = auto
    interactive = auto

[diff]
    tool = vimdiff
    compactionHeuristic = true

[difftool]
    prompt = false

[merge]
    tool = vimdiff
;    ff = false

[mergetool]
    prompt = false

[github]
    user = rinx

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes_global
    editor = nvim -u ~/.dotfiles/light.vimrc

[alias]
    this  = !git init && git add . && git commit -m \"first commit\"

    st    = status -s -b

    l     = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    ll    = log --graph --stat --abbrev-commit

    ad    = add

    ci    = commit
    cm    = commit -m
    cv    = commit -v
    ca    = commit --amend --no-edit
    cae   = commit --amend

    ps    = push
    psa   = push --all

    pl    = pull

    co    = checkout

    br    = branch

    dm    = diff master
    dw    = diff --color-words
    dc    = diff --staged

    sb    = show-branch

    mg    = merge
    mgn   = merge --no-commit

    sq    = squash

    wdiff = diff --color-words --ignore-all-space
    latexdiff = difftool -y -t latex

[url "https://"]
    insteadOf = git://

[credential]
    helper = store --file ~/.git-credentials
    helper = cache --timeout=360000

[pager]
    log  = "if builtin command -v diff-highlight > /dev/null 2>&1 ; then diff-highlight | less ; else less ; fi"
    show = "if builtin command -v diff-highlight > /dev/null 2>&1 ; then diff-highlight | less ; else less ; fi"
    diff = "if builtin command -v diff-highlight > /dev/null 2>&1 ; then diff-highlight | less ; else less ; fi"

[difftool.latex]
    cmd = latexdiff "$LOCAL" "$REMOTE"

[pull]
    ff = only

[submodule]
    recurse = true

[ghq]
    root = ~/local/src

[rerere]
	enabled = true
