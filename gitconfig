[include]
    path = ~/.gitconfig.local

[push]
    default = simple

[color]
    ui = auto
    interactive = auto

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[mergetool]
    prompt = false

[github]
    user = rinx

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes_global
    editor = vim -u ~/.dotfiles/tiny.vimrc

[alias]
    this  = !git init && git add . && git commit -m \"first commit\"

    st    = status -s -b

    l     = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    ll    = log --graph --stat --abbrev-commit

    ad    = add

    ci    = commit
    cm    = commit -m
    cv    = commit -v 
    ca    = commit --amend

    ps    = push
    psa   = push --all

    pl    = pull

    co    = checkout

    br    = branch
    
    dm    = diff master
    dw    = diff --color-words
    dc    = diff --staged

    sb    = show-branch

    mg    = merge
    mgn   = merge --no-commit

[url "https://"]
	insteadOf = git://

[credential]
	helper = cache --timeout=3600

